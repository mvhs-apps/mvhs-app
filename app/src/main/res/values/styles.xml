<resources>

    <!-- Base application theme. -->

    <style name="Theme.MVHSApp.Light" parent="Base.Theme.MVHSApp.Light">
        <item name="toolbarShadow">@drawable/shadow</item>
    </style>

    <style name="Theme.MVHSApp.Light.WithNavDrawer" parent="Base.Theme.MVHSApp.Light">
        <item name="toolbarShadow">@drawable/shadow</item>
    </style>

    <style name="Theme.MVHSApp.Light.Map" parent="Theme.MVHSApp.Light.WithNavDrawer"/>

    <style name="Base.Theme.MVHSApp.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Theme.SearchboxMenu" parent="Theme.MVHSApp.Light">
        <item name="drawerArrowStyle">@style/SearchboxDrawerArrowStyle</item>
    </style>

    <style name="SearchboxDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="drawableSize">24dp</item>
        <item name="barLength">18dp</item>
    </style>

</resources>
