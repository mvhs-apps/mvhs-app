<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@id/activity_map_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/activity_map_showlist_framelayout" />

    <TextView
        android:id="@id/activity_map_navigation_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_map_searchbox_background"
        android:textColor="@android:color/white" />

    <Button
        android:id="@id/activity_map_button_clear_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/activity_map_showlist_framelayout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Clear Navigation" />

    <Button
        android:id="@id/activity_map_button_show_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/activity_map_button_clear_nav"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Step through navigation" />

    <CheckBox
        android:id="@id/activity_map_checkbox_debug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/activity_map_button_show_nav"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingRight="8dp"
        android:text="Debug Mode"
        android:textColor="@android:color/white" />

    <FrameLayout
        android:id="@id/activity_map_showlist_framelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@id/activity_map_showlist_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?selectableItemBackground"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="List"
                android:padding="14dp"
                android:src="@drawable/ic_list_white"
                android:tint="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:text="List of classrooms and locations"
                android:textAllCaps="false" />
        </LinearLayout>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_above="@id/activity_map_showlist_framelayout"
        android:background="@drawable/toolbar_shadow"
        android:scaleY="-1" />

    <View
        android:id="@id/activity_map_searchbox_background"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:alpha="0"
        android:background="?android:windowBackground" />

    <com.mvhsapp.app.widget.SearchView
        android:id="@id/activity_map_searchbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@id/activity_map_list_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:elevation="16dp"
        tools:visibility="gone" />

</RelativeLayout>